@model IEnumerable<PersonelWebSite.Models.ExperienceModel>
<hr class="m-0" />
<!-- Experience-->
<section class="resume-section" id="experience">
    <div class="resume-section-content">
        <h2 class="mb-5">Experience</h2>
        @foreach (var item in Model)
        {
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">@item.JobTitle</h3>
                    <div class="subheading mb-3">@item.CompanyName</div>
                    <p>@item.Detail</p>
                </div>
                <div class="flex-shrink-0"><span class="text-primary">@item.Start.ToShortDateString() - @item.End.ToShortDateString()</span></div>
            </div>
        }
    </div>
</section>

